<!DOCTYPE html>
<html>
<head>
  <title>Cenario's Pizza</title>
  <%= favicon_link_tag 'favicon2.ico' %>
  <meta charset="UTF-8">
  
  <!-- Mobile specific meta viewport (never forget to add this for site responsiveness on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google maps API script import -->
  <%= javascript_include_tag "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" %>
  <%= javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
</head>
<body>
  <section class="app-layout-header">
    <div class="top-accent"></div>
    
    <!-- Logo and button navigation container -->
    <div class="container">
      <div class="row">
        <div class="four columns">
          <%= link_to image_tag("logo_vector.svg", class: 'logo-image'), root_path %>
        </div>
        <div class="eight columns buttons-offset">
          <%= link_to "Home", root_path, class: 'button' %>
          <%= link_to "Menu", menu_path, class: 'button' %>
          <%= link_to "Locations", locations_path, class: 'button' %>
          <%= link_to "Contact", new_contact_path, class: 'button' %>
        </div>
      </div>
    </div>
    <!-- End Logo and button navigation container -->
  </section>
  
  <!-- yield section -->
  <section class="app-layout-yield">
    <div class="container"></div>
    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag :p, value, class: "alert alert-#{key}" %>
      <% end %>
    </div>
    <%= yield %>
  </section>
  
  <section class="app-layout-footer">
    <div id="footer">
      <div class="container">
        <div class="row">
          <p>Copyright Â© 2016 Cenario's Pizza. All rights reserved.</p>
        </div>
      </div>
    </div>
  </section>
</body>
</html>