<!DOCTYPE html>
<html>
<head>
  <title>Cenario's Pizza</title>
  <%= favicon_link_tag 'favicon2.ico' %>
  <meta charset="UTF-8">
  
  <!-- Mobile specific meta viewport (never forget to add this for site responsiveness on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google maps API script import -->
  <%= javascript_include_tag "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" %>
  <%= javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">  TRY NEW FONTS -->
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <section>
    <div class="nav">
      <!-- Default navigation container -->
      <div class="nine columns offset-by-one">
        <header>
          <%= link_to image_tag("CenariosLogo.png"), root_path, id: 'logo' %>
          <nav>
            <a href="#" id="menu-icon" style="background: url(<%= image_url("menu-icon.png") %>) center;"></a>
            <ul>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Menu", menu_pizza_path %></li>
              <li><%= link_to "Locations", locations_path %></li>
              <li><%= link_to "Contact", new_contact_path %></li>
            </ul>
          </nav>
        </header>
      </div>
      <div class="order-now-button">
        <%= link_to "Order Now", locations_path %>
      </div>
    </div>
  </section>
  
  <!-- yield section -->
  <section class="app-layout-yield">
    <div class="container"></div>
    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag :p, value, class: "alert alert-#{key}" %>
      <% end %>
    </div>
    <%= yield %>
  </section>
  
  <section class="app-layout-footer">
    <div id="footer">
      <div class="container">
        <div class="row">
          <p>Copyright Â© 2016 Cenario's Pizza. All rights reserved.</p>
        </div>
      </div>
    </div>
  </section>
</body>
</html>